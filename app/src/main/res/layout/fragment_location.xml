        <!--android:text="其他" />-->
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_way_to_anywhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>